<div class="col-md-3 col-sm-6">
  <div class="human-block">
    <div class="human-block_img">
      <img src="<%= contact.image ? contact.image : 'images/no-human.jpg' %>">
    </div>
    <div class="human-block_title">
      <%= contact.name %>
    </div>
    <div class="human-block_info">
      <p><%= contact.title %></p>
      <% if contact.phone %>
        <p><%= contact.phone %></p>
      <% end %>
      <div class="social-block">
        <% if contact.facebook %>
          <a href="<%= contact.facebook %>" target="_blank" rel="noreferrer" class="social_unit small">
            <i class="icon-facebook"></i>
          </a>
        <% end %>
        <% if contact.email %>
          <a href="mailto:<%= contact.email %>" target="_blank" rel="noreferrer" class="social_unit small">
            <i class="icon-mail4"></i>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
